{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Gali",
  "scopeName": "source.gali",
  "patterns": [
    {
      "name": "comment.line.gali",
      "match": "#.*\n"
    },
    {
      "name": "keyword.gali",
      "match": "[\\\\\\.\\(\\)\\[\\]\\=\\;\\,\\!]"
    },
    {
      "name": "constant.numeric.gali",
      "match": "\\b-?\\d+"
    },
    {
      "name": "string.quoted.gali",
      "begin": "('|\")",
      "end": "\\1",
      "patterns": [
        {
          "name": "constant.character.escape.gali",
          "match": "\\\\."
        }
      ]
    }
  ]
}
